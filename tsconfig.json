{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "types": ["node"] // ⬅️ no agregues "jest" acá
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "__tests__",
    "e2e",
    "playwright",
    "cypress",
    "**/*.test.*",
    "**/*.spec.*",
    "jest.config.*",
    "vitest.config.*"
  ]
}
